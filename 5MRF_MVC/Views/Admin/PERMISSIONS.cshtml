@using System;
@using System.Collections.Generic;
@using System.Web;
@using System.Data;
@using System.Text;
@using _5MRF_MVC.Models;


@{
    DataHandle DataHandle = new DataHandle();
    ViewBag.Title = "SETTINGS";
    Layout = "~/Views/Main_Dashboard.cshtml";
}

@section HeaderSection{
    <!--begin::Page Vendors Styles -->
    <link href="~/Theme/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">

            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="#" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="" class="m-nav__link">
                        <span class="m-nav__link-text">GROUP PERMISSIONS LIST</span>
                    </a>
                </li>

            </ul>
        </div>
        <div>

        </div>
    </div>
</div>

<!-- END: Subheader -->
<div class="m-content">

    <!--begin::Portlet-->
    <div class="m-portlet m-portlet--space">
        <div class="m-portlet__head">





        </div>

    </div>

    <!--end::Portlet-->

    <div class="m-portlet">
        <div class="m-portlet__body">


            <script>

                function UserFormValidate() {};

            </script>

            <table id="tbl_fl" class="table table-striped- table-bordered table-hover m-table m-table--head-bg-info" style="font-size:12px;">
                <thead style="background-color:aquamarine;">
                    <tr>
                        <th><b>#ID</b></th>
                        <th><b>GROUP</b></th>
                        <th><b>ACTIVE</b></th>
                        <th><b>MENU PLAN UPLOAD</b></th>
                        <th><b>MENU DISCUSSION</b></th>
                        <th><b>MENU FOLLOWUP</b></th>
                        <th><b>MENU FUNC.FEEDBACK</b></th>
                        <th><b>MENU REPORT</b></th>
                        <th><b>MENU ADMINISTRATOR</b></th>
                        <th><b>IS PLANT ADMIN</b></th>
                        <th><b>ACCESS ALL PLANTS</b></th>
                        <th><b>ACCESS ALL DEPARTMENTS</b></th>
                        <th><b>ACCESS OVERALL DISCUSS</b></th>
                        <th><b>ACCESS MEETING FINISHED</b></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (DataRow dtRowstyle in DataHandle.SqlSelectCMD("SELECT * FROM GroupAccess").Rows)
                    {
                        <tr>
                            <td>
                                @dtRowstyle["Grp_ID"].ToString()
                            </td>
                            <td>
                            @dtRowstyle["Grp_Name"].ToString()
                            </td>
                            
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_Active"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_Upload_Plan"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_Discuission"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_Follow"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_Feedback"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_Reports"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_SuperAdmin"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_Admin"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_AllPlant"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_AllDepartment"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_Overall"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                            <td>
                                @if (bool.Parse(dtRowstyle["Grp_MeetingClose"].ToString()) == true)
                                {
                                    <span class="m-badge m-badge--success m-badge--wide">YES</span>
                                }
                                else
                                {
                                    <span class="m-badge m-badge--danger m-badge--wide">NO</span>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

    </div>



</div>



@section FooterSection {


    <!--begin::Page Vendors -->
    <script src="~/Theme/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#tbl_fl').DataTable({
                scrollX: true,
                scrollCollapse: true,
                "pageLength": 50,
                "order": [[1, "asc"]],
            });
        });
    </script>


}





