@using System;
@using System.Collections.Generic;
@using System.Web;
@using System.Data;
@using System.Text;
@using _5MRF_MVC.Models;


@{
    DataHandle DataHandle = new DataHandle();
    ViewBag.Title = "SETTINGS";
    Layout = "~/Views/Main_Dashboard.cshtml";
}

@section HeaderSection{
    <!--begin::Page Vendors Styles -->
    <link href="~/Theme/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">

            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="#" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="" class="m-nav__link">
                        <span class="m-nav__link-text">List Of Factories</span>
                    </a>
                </li>

            </ul>
        </div>
        <div>

        </div>
    </div>
</div>

<!-- END: Subheader -->
<div class="m-content">

    <!--begin::Portlet-->
    <div class="m-portlet m-portlet--space">
        <div class="m-portlet__head">





        </div>

    </div>

    <!--end::Portlet-->

    <div class="m-portlet">
        <div class="m-portlet__body">


            <script>

                function UserFormValidate() {};

            </script>

            <table id="tbl_fl" class="table table-striped- table-bordered table-hover m-table m-table--head-bg-info" style="font-size:12px;">
                <thead style="background-color:aquamarine;">
                    <tr>
                        <th><b>#ID</b></th>
                        <th><b>FACTORY NAME</b></th>
                        <th><b>CODE</b></th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (DataRow dtRowstyle in DataHandle.SqlSelectCMD("SELECT * FROM Factory").Rows)
                    {
                        <tr id="tr_@dtRowstyle["Fact_ID"].ToString()">
                            <td>
                                @dtRowstyle["Fact_ID"].ToString()
                            </td>
                            <td>@dtRowstyle["Fact_Name"].ToString()</td>
                            <td>@dtRowstyle["Fact_Code"].ToString()</td>
                           
                        </tr>
                    }

                </tbody>
            </table>

        </div>

    </div>



</div>



@section FooterSection {


    <!--begin::Page Vendors -->
    <script src="~/Theme/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#tbl_fl').DataTable({
                scrollX: true,
                scrollCollapse: true,
                "pageLength": 50,
                "order": [[1, "asc"]],
            });
        });
    </script>


}





