@using System.Data;
@using System.Text;
@using _5MRF_MVC.Models;

@{
    DataHandle DataHandle = new DataHandle();
    ViewBag.Title = "Index";
    Layout = "~/Views/Main_Dashboard.cshtml";
}

@section HeaderSection{
    <!--begin::Page Vendors Styles -->
    <link href="~/Theme/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">

            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="#" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="" class="m-nav__link">
                        <span class="m-nav__link-text">FUNCTIONAL FEEDBACK</span>
                    </a>
                </li>

            </ul>
        </div>
        <div>

        </div>
    </div>
</div>

<!-- END: Subheader -->
<div class="m-content">

    <!--begin::Portlet-->
    <div class="m-portlet m-portlet--space">
        <div class="m-portlet__head">

            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Plan List :
                    </h3>
                </div>
            </div>

        </div>
        <div class="m-portlet__body">

            <table id="table1" class="table table-bordered m-table m-table--head-bg-info">
                <thead style="background-color:aquamarine;">
                    <tr>
                        <th><b>Factory</b></th>
                        <th><b>Year</b></th>
                        <th><b>Month</b></th>
                        <th><b>#Export</b></th>
                        <th><b>#</b></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow dtRowstyle in DataHandle.SqlSelectCMD("SELECT * FROM PlanMaster ORDER BY Plan_ID DESC").Rows)
                    {
                        <tr>
                            <td>@DataHandle.GetFactoryName(dtRowstyle["Fact_ID"].ToString())</td>
                            <td>@dtRowstyle["Year"].ToString()</td>
                            <td>@DataHandle.GetMonth(dtRowstyle["Month"].ToString())</td>
                            <td>
                                <a target="_blank" href="@Url.Action("FeedbackUPExport", "Reports", new { id = dtRowstyle["Plan_ID"].ToString() })" class="btn btn-dark m-btn text-white btn-sm btn-md">
                                    Export Data
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Followup", "Feedback", new { id = dtRowstyle["Plan_ID"].ToString() })" class="btn btn-primary m-btn text-white btn-sm btn-block">
                                    Update Feedback&nbsp; <i class="flaticon-logout"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <!--end::Portlet-->

</div>

@section FooterSection {

    <!--begin::Page Vendors -->
    <script src="~/Theme/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#table1').DataTable({
                "order": [], //Initial no order.
                "aaSorting": []
            });
        });
    </script>
}
