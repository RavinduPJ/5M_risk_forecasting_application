@using System.Data;
@using System.Text;
@using _5MRF_MVC.Models;

@{
    DataHandle DataHandle = new DataHandle();
    ViewBag.Title = "Send Alerts";
    Layout = "~/Views/Main_Dashboard.cshtml";
}

@section HeaderSection{
    <!--begin::Page Vendors Styles -->
    <link href="~/Theme/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">

            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="#" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="" class="m-nav__link">
                        <span class="m-nav__link-text">SEND MAIL ALERT VIA MEETING SUMMARY</span>
                    </a>
                </li>

            </ul>
        </div>
        <div>

        </div>
    </div>
</div>

<!-- END: Subheader -->
<div class="m-content">

    <!--begin::Portlet-->
    <div class="m-portlet m-portlet--space">
        <div class="m-portlet__head">

            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Plan List :
                    </h3>
                </div>
            </div>

        </div>
        <div class="m-portlet__body">

            @if (ViewBag.Message == "E-mail Send Successfully")
            {
                <div class="alert alert-success" role="alert">
                    Email Alert Send Successfully!
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message!
                </div>
            }

            <br />

            <a href="@Url.Action("Index", "Notification")" class="btn btn-primary">
                << Back To Plan List
            </a>

        </div>
    </div>

    <!--end::Portlet-->

</div>

@section FooterSection {

    <!--begin::Page Vendors -->
    <script src="~/Theme/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#table1').DataTable();
        });
    </script>
}


